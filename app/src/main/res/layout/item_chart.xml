<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MusicTracker.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_item_clickable"
        android:padding="@dimen/item_content_padding">

        <ImageView
            android:id="@+id/chart_img"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/chart_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/chart_img"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@id/chart_img"
            android:layout_toRightOf="@id/chart_img"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:paddingBottom="6dp"
            android:textColor="@color/text_primary_dark"
            android:textSize="@dimen/item_title_tv"/>

        <TextView
            android:id="@+id/chart_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_secondary_dark"
            android:textSize="@dimen/item_date_tv"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>